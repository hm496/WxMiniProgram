.view2{
  height:100px;
  width:100px;
  border:2px solid #000;
  position:relative;
  box-sizing:border-box;
}

.view2::before, .view2::after{
  border:solid transparent;
  content:' ';
  height:0;
  width:0;
  left:100%;
  position:absolute;
  width:0;
}

.view2::before{
  border-width:12px;
  border-left-color:#000;
  top:18px;
}

.view2::after{
  border-width:10px;
  border-left-color:#fff;
  top:20px;
}
